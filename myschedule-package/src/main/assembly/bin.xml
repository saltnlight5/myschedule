<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<sources>
				<fileSets>
					<fileSet>
						<directory>../myschedule-package</directory>
						<includes>
							<include>README.md</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>../</directory>
						<includes>
							<include>RELEASE.md</include>
							<include>scripts/*</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>../</directory>
						<includes>
							<include>bin/*</include>
						</includes>
						<fileMode>775</fileMode>
					</fileSet>
					<fileSet>
						<outputDirectory>bin</outputDirectory>
						<directory>../myschedule-web/src/main/resources/myschedule/web</directory>
						<includes>
							<include>myschedule-settings.properties</include>
						</includes>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>myschedule:myschedule-quartz-extra</include>
				<include>myschedule:myschedule-package</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<unpack>false</unpack>
						<scope>runtime</scope>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>myschedule:myschedule-web</include>
			</includes>
			<binaries>
				<outputDirectory>war</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<outputFileNameMapping>myschedule.war</outputFileNameMapping>
			</binaries>
		</moduleSet>

	</moduleSets>
</assembly>